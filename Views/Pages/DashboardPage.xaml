<Page x:Class="EventCalendar.Views.Pages.DashboardPage"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:local="clr-namespace:EventCalendar.Views.Pages"
        xmlns:ui="http://schemas.lepo.co/wpfui/2022/xaml"
        xmlns:vm="clr-namespace:EventCalendar.ViewModels"
        mc:Ignorable="d"
        Title="DashboardPage" Height="600" Width="1200">
    <Page.DataContext>
        <vm:DashboardViewModel></vm:DashboardViewModel>
    </Page.DataContext>
    <Grid>
        <ui:Card HorizontalAlignment="Left" BorderThickness="0" Margin="20 0 0 0" Background="Transparent" VerticalAlignment="Top">
            <ui:TextBlock FontSize="32" Text="{Binding WelcomeMessage}"></ui:TextBlock>
        </ui:Card>
    </Grid>
</Page>
